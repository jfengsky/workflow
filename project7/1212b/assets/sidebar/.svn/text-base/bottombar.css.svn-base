.c2b-btmbar {
  height: 48px;
  width: 100%;
  overflow: hidden;
  background-color: #272727;
  box-shadow: -2px -2px 10px rgba(0, 0, 0, 0.3);
  position: fixed;
  bottom: 0;
  z-index: 998; }
  .c2b-btmbar .w990 {
    width: 990px;
    height: 48px;
    margin: auto;
    overflow: hidden;
    background-color: #1e1e1e; }
  .c2b-btmbar ul {
    float: left;
    width: 624px;
    height: 48px;
    background: url(http://img04.taobaocdn.com/tps/i4/T16G.jXbtdXXaEIt7E-712-48.png) no-repeat; }
  .c2b-btmbar li {
    float: left; }
    .c2b-btmbar li a {
      width: 104px;
      height: 48px;
      text-indent: -999em;
      overflow: hidden;
      float: left;
      background-color: #000;
      opacity: 0;
      filter: alpha(opacity=0); }
      .c2b-btmbar li a:hover {
        opacity: 0.12;
        filter: alpha(opacity=12); }
  .c2b-btmbar em {
    width: 174px;
    float: left;
    text-align: center;
    line-height: 48px;
    font-size: 14px;
    color: #fff; }
    .c2b-btmbar em a:link, .c2b-btmbar em a:visited {
      color: #fff; }
    .c2b-btmbar em a:hover {
      color: #ff6600; }
  .c2b-btmbar .c2b-mine {
    width: 90px;
    height: 27px;
    line-height: 27px;
    float: right;
    font-size: 14px;
    color: #ff6600;
    background: url(http://img04.taobaocdn.com/tps/i4/T16G.jXbtdXXaEIt7E-712-48.png) no-repeat -624px 0;
    padding: 0 0 0 100px;
    margin-top: 10px; }
